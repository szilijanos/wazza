{
    "name": "my-schedules-menetrendek",
    "version": "1.0.0",
    "description": "This app provides an alternative interface to menetrendek.hu with advanced features of storing and retreiving public transport schedules of Hungary",
    "scripts": {
        "lint:eslint": "eslint --ext .js,.html . --ignore-path .gitignore",
        "format:eslint": "eslint --ext .js,.html . --fix --ignore-path .gitignore",
        "lint": "npm run lint:eslint",
        "format": "npm run format:eslint",
        "scss": "node-sass --watch src/assets/sass -o src/assets/css",
        "server": "node ./src/server/server.js"
    },
    "author": "JÃ¡nos Szili",
    "license": "ISC",
    "repository": "https://github.com/szilijanos/wazza.git",
    "devDependencies": {
        "@open-wc/eslint-config": "^2.0.4",
        "eslint": "^6.1.0",
        "husky": "^1.0.0",
        "lint-staged": "^8.0.0",
        "node-sass": "^4.13.1"
    },
    "eslintConfig": {
        "extends": [
            "@open-wc/eslint-config"
        ],
        "rules": {
            "indent": [
                "error",
                4
            ],
            "max-len": [
                "error",
                {
                    "code": 120,
                    "ignoreComments": true,
                    "ignoreTemplateLiterals": true
                }
            ],
            "operator-linebreak": [
                "error",
                "after",
                {
                    "overrides": {
                        "&&": "before",
                        "||": "before",
                        "?": "before",
                        ":": "before"
                    }
                }
            ],
            "comma-dangle": [
                "error",
                "only-multiline"
            ],
            "arrow-parens": [
                "error",
                "always"
            ],
            "implicit-arrow-linebreak": [
                "error",
                "beside"
            ],
            "no-unused-vars": [
                "error",
                {
                    "args": "after-used"
                }
            ]
        },
        "overrides": [
            {
                "files": [
                    "**/mockData/*.js"
                ],
                "rules": {
                    "max-len": "off",
                    "quote-props": "off"
                }
            }
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.js": [
            "eslint --fix",
            "git add"
        ]
    },
    "dependencies": {
        "follow-redirects": "^1.10.0"
    }
}
